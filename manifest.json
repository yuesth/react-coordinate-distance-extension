{
    "manifest_version": 3,
    "name": "React Coordinates Distances Extension",
    "version": "1.0.0",
    "description": "A Chrome extension to calculate distances between coordinates using React.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"  
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]    
        }]
}